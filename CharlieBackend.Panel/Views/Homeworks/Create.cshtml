@model CharlieBackend.Core.DTO.Homework.HomeworkDto

@{
    ViewData["Title"] = "AddNewHomework";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content-wrapper" class="d-flex flex-row  justify-content-center">

    <div class="container mt-3 col-5">

        <h1 class="h3 mb-2 text-gray-800">Add homework</h1>

        <div class="card shadow mb-4">

            <div class="modal-body">
                <form method="post" asp-action="PostHomework" asp-controller="Homeworks">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DueDate" class="control-label"></label>
                        <input type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-dd")" max="3000-12-31" class="form-control"
                               value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd HH:mm").Replace(' ','T')" asp-for="DueDate">
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskText" class="control-label"></label>
                        <input asp-for="TaskText" class="form-control" />
                        <span asp-validation-for="TaskText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="LessonId" class="form-control" />
                        <span asp-validation-for="LessonId" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-action="Index" asp-controller="Homeworks">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

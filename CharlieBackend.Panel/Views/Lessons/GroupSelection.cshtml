@model IEnumerable<CharlieBackend.Panel.Models.StudentGroups.StudentGroupViewModel>

@{
    Layout = "_Layout";
}


<div id="content-wrapper" class="d-flex flex-row  justify-content-center">

    <div class="container mt-3 col-5">

        <h1 class="h3 mb-2 text-gray-800">Please select group</h1>

        <div class="card shadow mb-5">

            <div class="modal-body">

                <form method="get" asp-action="CreateLesson" asp-controller="Lessons">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="card-body">
                        <div class="table-responsive p-3" style="overflow-x:unset">
                            <table class="table table-striped container-fluid" width="100%" cellspacing="0">
                                <thead>
                                    <tr class="thead-dark row">
                                        <th class="col">
                                            <span>Groups</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var studentGroup in Model)
                                    {
                                        <tr class="row">
                                            <td class="col">
                                                <a class=" dropdown-item" asp-action="CreateLesson" asp-controller="Lessons" asp-route-stGroupId="@studentGroup.Id">
                                                    <span>@Html.DisplayFor(modelItem => studentGroup.Name)</span>
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-action="AllLessons" asp-controller="Lessons">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@using Microsoft.Extensions.Localization
@using CharlieBackend.Panel.Controllers
@model IStringLocalizer<HomeController>

@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = "_Layout";
}

<div class="text-center" id="helloDiv">
    <h1 class="display-4 container-fluid">@Model["Welcome"].Value</h1>
    <p>@Model["Greeting"].Value</p>

    <div class="container-fluid justify-content-between" id="wrapper">
        <div class="text-left" style="flex:1 1 30%">
            <h2>@Model["About"].Value</h2>
            <p>
                @Model["DescriptionFirstParagraph"].Value
            </p>
            <p>
                @Model["DescriptionSecondParagraph"].Value
            </p>
            <p>
                @Model["DescriptionThirdParagraph"].Value
            </p>
        </div>

        <div style="flex: 1 1 40%">
            <img src="~/img/Home_page_picture.png" style="width: 100%" />
        </div>

        <div class="text-left" style="flex: 1 1 30%">
            <h2>@Model["Feature"].Value</h2>
            <ul>
                <li>@Model["Homework and grades"].Value</li>
                <li>@Model["Timetable of classes"].Value</li>
                <li>@Model["Lists"].Value</li>
                <li>@Model["Notification"].Value</li>
                <li>@Model["Export/import"].Value</li>
                <li>@Model["Access to information"].Value</li>
            </ul>
        </div>
    </div>
</div>

@{
    Dictionary<string, string> tokens = TempData["authTokens"] as Dictionary<string, string>;

    if (tokens != null)
    {
        foreach (var token in tokens)
        {
            <script>
                localStorage.setItem(`@token.Key` +`Token`, `@token.Value`);
            </script>
        }
    }
}

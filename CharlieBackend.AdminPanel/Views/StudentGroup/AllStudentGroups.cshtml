
@model IList<CharlieBackend.Core.DTO.StudentGroups.StudentGroupDto>

@{
    Layout = "_Layout";
}

<div id="content-wrapper" class="d-flex flex-column">

    <div id="content">

        <div class="container-fluid">

            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive" style="overflow-x:unset">
                        <table class="table table-bordered table-striped text-center" id="dataTable" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Course id</th>
                                    <th>Name</th>
                                    <th>Start date</th>
                                    <th>Finish date</th>
                                    <th>Students id</th>
                                    <th>Mentors id</th>
                                    <th>Controll</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.CourseId</td>
                                        <td>@item.Name</td>
                                        <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                                        <td>@item.FinishDate.ToString("dd.MM.yyyy")</td>


                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-outline-secondar dropdown-toggle" data-toggle="dropdown">
                                                    Show student IDs
                                                </button>
                                                <div class="dropdown-menu">
                                                    @if (@item.StudentIds != null)
                                                    {
                                                        @foreach (var student in @item.StudentIds)
                                                        {
                                                            <label class="dropdown-item" href="#">@student</label>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <label class="dropdown-item" href="#">null</label>
                                                    }
                                                </div>
                                            </div>
                                        </td>

                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-outline-secondar dropdown-toggle" data-toggle="dropdown">
                                                    Show mentor IDs
                                                </button>
                                                <div class="dropdown-menu">
                                                    @if (@item.MentorIds != null)
                                                    {
                                                        @foreach (var mentor in @item.MentorIds)
                                                        {
                                                            <label class="dropdown-item" href="#">@mentor</label>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <label class="dropdown-item" href="#">null</label>
                                                    }
                                                </div>
                                            </div>
                                        </td>

                                         <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-secondar dropdown-toggle"
                                                        type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                        <i class="fas fa-cog"></i>
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                       
                                                        <a href="#" class=" dropdown-item ">
                                                            <i class="fas fa-pen"></i>
                                                            <span>Edit </span>
                                                        </a>

                                                        <a href="#" class=" dropdown-item ">
                                                            <i class="fas fa-trash"></i>
                                                            <span>Delete </span>
                                                        </a>
                                                    </div>
                                                </div>
                                         </td>

                                       
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

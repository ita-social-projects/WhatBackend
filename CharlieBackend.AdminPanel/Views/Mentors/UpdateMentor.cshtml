@model CharlieBackend.Core.DTO.Mentor.UpdateMentorDto

@{
    Layout = "_Layout";
}

<div id="content-wrapper" class="d-flex flex-row  justify-content-center">

    <div class="container mt-3 col-5">

        <h1 class="h3 mb-2 text-gray-800">Edit Mentor @ViewBag.Mentor.FirstName @ViewBag.Mentor.LastName</h1>

        <div class="card shadow mb-4">

            <div class="modal-body">
                <form method="post" asp-action="UpdateMentor" asp-controller="Mentors" asp-route-id="@ViewBag.Mentor.Id">

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" value="@ViewBag.Mentor.Email">
                    </div>

                    <div class="form-group">
                        <label>First name</label>
                        <input type="text" class="form-control" asp-for="FirstName" value="@ViewBag.Mentor.FirstName">
                    </div>

                    <div class="form-group">
                        <label>Last name</label>
                        <input type="text" class="form-control" asp-for="LastName" value="@ViewBag.Mentor.LastName">
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-action="AllMentors" asp-controller="Mentors">Close</a>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

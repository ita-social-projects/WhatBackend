
@model IEnumerable<CharlieBackend.AdminPanel.Models.Mentor.MentorViewModel>

@{
    Layout = "_Layout";
}

<div id="content-wrapper" class="d-flex flex-column">

    <div id="content">

        <div class="fixed-bottom ml-4" style="left:90%; right:50%; bottom:8%;">
            <div class="dropleft">
                <button type="button" class="btn btn-lg btn-success btn-circle " data-toggle="dropdown">
                    <i class="fas fa-plus"></i>
                </button>
                <div class="dropdown-menu" style="border: 0;">
                    <form method="post" class="input-group position-fixed" asp-action="AddMentor" asp-controller="Mentors">
                        <input type="text" class="form-control" name="id" placeholder="Account id" />
                        <button type="submit" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-plus"></i>
                        </button>
                    </form>
                </div>
            </div>

        </div>

        <div class="container-fluid">

            <div class="card shadow mb-4">

                <div class="card-header py-3">
                    <div class="row">

                        <h6 class="m-2 font-weight-bold text-primary">Mentors</h6>

                        <a class=" btn btn-light js-student-list-button" id="activeMentors">
                            <i class="far fa-eye"></i>
                            <span> Active mentors </span>
                        </a>

                        <a class="btn btn-light js-student-list-button d-none" id="inactiveMentors">
                            <i class="far fa-eye-slash"></i>
                            <span> Inactive mentors</span>
                        </a>
                    </div>

                </div>


                <div class="card-body">
                    <div class="table-responsive" style="overflow-x:unset">
                        <table class="table table-bordered table-striped text-center" id="dataTable" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Email</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Controll</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="col-4 text-truncate">@item.Email</td>
                                        <td class="col-3 text-truncate">@item.FirstName</td>
                                        <td class="col-3 text-truncate">@item.LastName</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondar dropdown-toggle"
                                                        type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-cog"></i>
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                                    <a class="dropdown-item" asp-action="UpdateMentor" asp-controller="Mentors" asp-route-id="@item.Id">
                                                        <i class="fas fa-pen"></i>
                                                        <span>Edit</span>
                                                    </a>

                                                    <a class="dropdown-item" asp-action="DisableMentor" asp-controller="Mentors" asp-route-id="@item.Id">
                                                        <i class="fas fa-trash"></i>
                                                        <span>Delete</span>
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>


                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

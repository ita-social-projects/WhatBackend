
@model IEnumerable<CharlieBackend.AdminPanel.Models.Theme.ThemeViewModel>

@{
    Layout = "_Layout";
}

<div id="content-wrapper" class="d-flex flex-column">

    <div id="content">

        <div class="fixed-bottom ml-4" style="left:90%; right:50%; bottom:8%;">
            <div class="dropleft">
                <button type="button" class="btn btn-lg btn-success btn-circle " data-toggle="dropdown">
                    <i class="fas fa-plus"></i>
                </button>
                <div class="dropdown-menu ">
                    <form style="min-width: 170px;" method="post" class="input-group" asp-action="AddTheme" asp-controller="Themes">
                        <input type="text" class="form-control" name="Name" placeholder="Theme`s name" />
                        <button type="submit" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-plus"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="container-fluid">

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Themes</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="overflow-x:unset">
                        <table class="table table-hover text-left" id="dataTable" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr class="thead-dark row">
                                    <th class="col-9 text-center">Name</th>
                                    <th class="col-3">Controll</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="row">
                                        <td class="col-9 text-truncate">@item.Name</td>
                                        <td class="col-3">
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondar dropdown-toggle"
                                                        type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-cog"></i>
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                                    <a class="dropdown-item" asp-action="UpdateTheme" asp-controller="Themes" asp-route-id="@item.Id">
                                                        <i class="fas fa-pen"></i>
                                                        <span>Edit </span>
                                                    </a>

                                                    <a class="dropdown-item" asp-action="DeleteTheme" asp-controller="Themes" asp-route-id="@item.Id">
                                                        <i class="fas fa-pen"></i>
                                                        <span>Delete</span>
                                                    </a>

                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
